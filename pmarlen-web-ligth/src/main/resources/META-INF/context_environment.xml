<?xml version="1.0" encoding="UTF-8"?>
<Context allowLinking="true" antiJARLocking="true" crossContext="true" path="/pmarlen-web-ligth" reloadable="true">
<!--
	parent.version = ${project.parent.version}
	environment    = ${environment.stage}
	url            = ${environment.jdbc.url}
	jndi           = ${environment.jdbc.jndi}
	user           = ${environment.jdbc.user}
	password       = ${environment.jdbc.password}	
-->

  <Resource auth="Container" 
			driverClassName="com.mysql.jdbc.Driver" 
			factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" 
			initialSize="10" 
			logAbandoned="true" 
			maxActive="15" 
			maxIdle="8" 
			maxWait="20000" 
			minIdle="4" 
			name="${environment.jdbc.jndi}" 
			password="${environment.jdbc.password}" 
			removeAbandoned="true" 
			removeAbandonedTimeout="60" 
			testOnBorrow="true" 
			testWhileIdle="true" 
			timeBetweenEvictionRunsMillis="5000" 
			type="javax.sql.DataSource" 
			url="${environment.jdbc.url}" 
			username="${environment.jdbc.user}" 
			validationQuery="select 1"/>
  <Realm className="org.apache.catalina.realm.JDBCRealm" 
		 connectionName="${environment.jdbc.user}" 
		 connectionPassword="${environment.jdbc.password}" 
		 connectionURL="${environment.jdbc.url}" 
		 digest="MD5" 
		 driverName="com.mysql.jdbc.Driver" 
		 roleNameCol="PERFIL" 
		 userCredCol="PASSWORD" 
		 userNameCol="EMAIL" 
		 userRoleTable="USUARIO_PERFIL" 
		 userTable="USUARIO"/>
</Context>
